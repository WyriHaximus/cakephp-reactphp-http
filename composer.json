{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "name": "wyrihaximus/cake-react-http",
  "description": "Asynchronous CakePHP HTTP Server",
  "type":"cakephp-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2",
    "api-clients/cs-fixer-config": "^1.0",
    "cakephp/cakephp": "^3.0.0",
    "doctrine/annotations": "^1.2",
    "friendsofphp/php-cs-fixer": "^2.10",
    "nikic/php-parser": "^3.0 || ^2.0 || ^1.0",
    "phpdocumentor/reflection-docblock": "^4.0 || ^3.0 || ^2.0",
    "react/http": "^0.8.3",
    "roave/better-reflection": "^2.0",
    "wyrihaximus/json-psr7": "^1.0",
    "wyrihaximus/psr-3-callable-throwable-logger": "^1.0",
    "wyrihaximus/psr-3-context-logger": "^1.0",
    "wyrihaximus/react-child-process-closure": "^1.0",
    "wyrihaximus/react-child-process-pool": "^1.3",
    "wyrihaximus/react-http-middleware-session": "^2.0",
    "wyrihaximus/react-http-middleware-webroot-preload": "^1.4",
    "wyrihaximus/react-http-psr-15-middleware-group": "^1.2",
    "wyrihaximus/recoil-queue-caller-pool": "dev-master",
    "wyrihaximus/to-child-process-or-not-to-child-process": "dev-master",
    "wyrihaximus/to-coroutine-or-not-to-coroutine": "dev-master"
  },
  "require-dev": {
    "api-clients/test-utilities": "^4.3",
    "monolog/monolog": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\React\\Cake\\Http\\": "src/"
    },
    "files": ["src/functions_include.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\React\\Tests\\Cake\\Http\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "scripts": {
    "ensure-installed": "composer install --ansi -n -q",
    "cs": [
      "@ensure-installed",
      "php-cs-fixer fix --config=.php_cs --ansi --dry-run --diff --verbose --allow-risky=yes --show-progress=estimating"
    ],
    "cs-fix": [
      "@ensure-installed",
      "php-cs-fixer fix --config=.php_cs --ansi --verbose --allow-risky=yes --show-progress=estimating"
    ],
    "unit": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist"
    ],
    "unit-coverage": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml --coverage-clover ./build/logs/clover.xml"
    ],
    "lint-php": [
      "@ensure-installed",
      "parallel-lint --exclude vendor ."
    ],
    "qa-all": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-all-coverage": [
      "@lint-php",
      "@cs",
      "@unit-coverage"
    ],
    "qa-windows": [
      "@lint-php",
      "@cs",
      "@unit"
    ],
    "qa-ci": [
      "@unit"
    ],
    "qa-ci-extended": [
      "@qa-all-coverage"
    ],
    "qa-ci-windows": [
      "@qa-windows"
    ],
    "qa-contrib": [
      "@qa-all"
    ],
    "ci-coverage": [
      "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    ]
  }
}
